{
  "name": "wce-emulator",
  "version": "1.0.0",
  "description": "WhatsApp Cloud Emulator & Bridge",
  "private": true,
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run install-all",
    "install-all": "cd emulator && npm install && cd ../bridge && npm install",
    "dev": "concurrently \"npm:dev:bridge\" \"npm:dev:emulator\"",
    "dev:bridge": "node bridge/index.js",
    "dev:emulator": "cd emulator && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "keywords": [
    "whatsapp",
    "wce",
    "pywce",
    "jawce",
    "emulator",
    "cloud-api",
    "meta",
    "testing"
  ],
  "author": "DonnC",
  "license": "MIT"
}
